#include <stdio.h>
#include <math.h>

int main() {
	int x,saniye,dakika,saat,gun;
	
	printf("x:");
	scanf("%d" ,&x);
	gun=(x/86400);
	saat=((x/3600)-((x/86400)*24));
	dakika=((x/60)-(x/3600)*60);
	saniye=(x-((gun*86400)+(saat*3600)+(dakika*60)));
	
	
	printf("gun:%d saat:%d dakika:%d saniye:%d" ,gun ,saat ,dakika ,saniye);
	
	
	
	
	return 0;
}
